@Styles.Render("~/Content/formularioDatos.css")
<!--jquery-->
<script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>

<!-- BS5.1.1 CSS/JS -->
<link href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' rel='stylesheet'>
<script type='text/javascript' src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js'></script>

<!-- Latest BS-Select compiled and minified CSS/JS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta2/dist/css/bootstrap-select.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta2/dist/js/bootstrap-select.min.js"></script>

<style>
    #prospeccionDiv h4 {
        color: #046c84 !important;
    }

</style>

<div class="py-2 row" id="prospeccionDiv">
    <h4 class="pt-md-0 pt-3 pb-3">Estado de prospección</h4>
    <div class="col-md-6 pt-md-0 pt-3">
        <label for="sellerField">Asesor</label>
        <div class="arrow">
            <select name="sellerField" class="bg-light selectpicker">
                <option value="" selected disabled>--Seleccionar--</option>
                <option>Juán</option>
                <option>María</option>
                <option>Luis</option>
                <option>Erika</option>
            </select>
        </div>
    </div>
    <div class="col-md-6 pt-md-0 pt-3 ">
        <label for="mediaField">Medio de comunicación</label>
        <div class="arrow">
            <select name="mediaField" class="bg-light selectpicker">
                <option value="" selected disabled>--Seleccionar--</option>
                <option data-icon="fa fa-phone">&nbspLlamada</option>
                <option data-icon="fa fa-users">&nbspReunión</option>
                <option data-icon="fa fa-envelope">&nbspCorreo</option>
                <option data-icon="fa fa-video-camera">&nbspOnline Meeting</option>

            </select>
        </div>
    </div>

    <div class="col-md-6 pt-md-0 pt-3 mt-md-4"> <label for="dateField">Fecha de registro</label> <input type="date" value="" min="2020-01-01" name="dateField"></div>
    <div class="col-md-6 pt-md-0 pt-3 mt-md-4"> <label for="firtsContDateField">Fecha de contacto</label> <input type="date" value="" min="2020-01-01" name="firtsContDateField"></div>
    <div class="col-md-6 pt-md-0 pt-3 mt-md-4">
        <label for="statusField">Status de primer contacto</label>
        <div class="arrow">
            <select name="statusField" class="bg-light selectpicker">
                <option value="" selected disabled>--Seleccionar--</option>
                <option data-content="<span class='badge badge-lg badge-success'>Agendada</span>"></option>
                <option data-content="<span class='badge badge-lg badge-warning'>Pendiente</span>"></option>
                <option data-content="<span class='badge badge-lg badge-dark'>No contesta</span>"></option>
                <option data-content="<span class='badge badge-lg badge-danger'>Rechazado</span>"></option>
            </select>
        </div>
    </div>
    <div class="col-md-6 pt-md-0 pt-3 mt-md-4">
        <label for="folioField">Folio:</label> <div class="folioField" style="text-align:center; font-size:medium;"><strong>000001</strong></div>

    </div>
    <div class="col-md-12 pt-md-0 pt-3 mt-4"> <label for="comments1">Observaciones</label> <textarea class="bg-light form-control comments1"></textarea></div>

</div>

<script src='https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js'></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/fontawesome-iconpicker/3.2.0/js/fontawesome-iconpicker.min.js'></script>

