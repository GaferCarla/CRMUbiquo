
@{
    ViewBag.Title = "editarDatosClientes";
    @Styles.Render("~/Content/breadcrumb.css");

}

<div class="container bg-white py-4">
    <div class="template-demo">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-custom ">
                <li class="breadcrumb-item"><a href='@Url.Action("Index","Home")' data-abc="true" class="font-weight-bold text-uppercase">Home</a></li>
                <li class="breadcrumb-item"><a href='@Url.Action("Clientes","Home")' data-abc="true" class="font-weight-bold text-uppercase">Clientes</a></li>
                <li class="breadcrumb-item active font-weight-bold " aria-current="page"><span>&nbsp&nbspEditar datos</span></li>
            </ol>
        </nav>

    </div>

    <div class="wrapper bg-white mt-sm-5">
        @Html.Partial("_datosForm")
        <div class="py-3 pb-4 border-bottom">
            <a href="#" class="btn btn-primary mr-3" style="color:white; font-weight:700">Guardar cambios</a>

            <a href="@Url.Action("Clientes","Home")" class="btn border btn-secondary" style="font-weight:700">Cancelar</a>
        </div>
        <div class="d-sm-flex align-items-center " id="deactivate">
            <div class="p-3">
                <b>Eliminar datos de la empresa</b>
                <p>¡Advertencia! Se eliminarán todos los detalles y datos ligados a la empresa. Incluido datos de prospección y transacciones concretadas</p>
            </div>
            <div class="ml-auto"> <button class="btn danger" href="#deleteEmployeeModal" data-toggle="modal" style="font-weight:700">ELIMINAR</button> </div>
        </div>
    </div>
</div>

<div id="deleteEmployeeModal" class="modal fade fadeInLeft" data-animation-in="fadeInLeft">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Eliminar datos</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>¡Advertencia! Se eliminarán todos los detalles y datos ligados a la empresa. Incluido datos de prospección y transacciones concretadas.</p>
                    <p class="text-warning"><small>Esta acción no podrá ser deshecha.</small></p>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-secondary" data-dismiss="modal" value="Cancelar">
                    <input type="submit" class="btn btn-danger" value="Eliminar">
                </div>
            </form>
        </div>
    </div>
</div>