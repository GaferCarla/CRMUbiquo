
@{
    ViewBag.Title = "verUsuario";
    @Styles.Render("~/Content/formularioDatos.css")
    @Styles.Render("~/Content/breadcrumb.css");
    @Styles.Render("~/Content/webPixel.css");

}



<style>
    h1 {
        color:  #046c84 ;
    }

    #deactivate .danger {
        color: red !important;
       
    }

    #deactivate .danger:hover {
        color: white;
        
        background-color:red;
    }
</style>



<div class="container bg-white py-4 card shadow border-0 mb-7 pl-2 pr-2">
    <div class="template-demo">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-custom ">
                <li class="breadcrumb-item"><a href='@Url.Action("Index","Home")' data-abc="true" class="font-weight-bold text-uppercase">Home</a></li>
                <li class="breadcrumb-item"><a href='@Url.Action("Usuarios","Home")' data-abc="true" class="font-weight-bold text-uppercase">Usuarios</a></li>
                <li class="breadcrumb-item active font-weight-bold " aria-current="page"><span>&nbsp&nbspEditar datos</span></li>
            </ol>
        </nav>

    </div>

    <div class="wrapper bg-white mt-sm-5">
        <h1 class="h2 mb-4 ls-tight" id="titleCRM">Editar datos de usuario</h1>
        <div class="py-2 px-md-32">
            <div class="row py-2 ">
                <div class="col-12 pb-3"> <label for="user">Usuario</label> <input type="text" class="bg-light form-control user"> </div>
                <div class="col-12"> <label for="password">Contraseña</label> <input type="text" class="bg-light form-control password"> </div>


            </div>
        </div>
        <div class="py-3 pb-4 border-bottom px-md-32">
            <a href="#" class="btn btn-primary mr-3 mb-4 mb-md-0" style="color:white; font-weight:700">Guardar cambios</a>

            <a href="@Url.Action("Usuarios","Home")" class="btn border btn-secondary mr-3 mb-2 mb-md-0" style="font-weight:700">Cancelar</a>
        </div>
        <div class="d-sm-flex align-items-center px-md-32" id="deactivate">
            <div class="p-3">
                <b>Eliminar usuario</b>
                <p>¡Advertencia! Se eliminarán todos los detalles y datos ligados al usuario.</p>
            </div>
            <div class="ml-auto"> <button class="btn danger" href="#deleteUserModal" data-toggle="modal" style="font-weight: 700; border: 1px solid #ddd;">ELIMINAR</button> </div>
        </div>
    </div>
</div>

<div id="deleteUserModal" class="modal fade fadeInLeft" data-animation-in="fadeInLeft">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Eliminar datos</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>¡Advertencia! Se eliminarán todos los detalles y datos ligados al usuario.</p>
                    <p class="text-warning"><small>Esta acción no podrá ser deshecha.</small></p>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-secondary" data-dismiss="modal" value="Cancelar">
                    <input type="submit" class="btn btn-danger" value="Eliminar">
                </div>
            </form>
        </div>
    </div>
</div>
