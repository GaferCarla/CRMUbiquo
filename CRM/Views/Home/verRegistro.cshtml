
@{
    ViewBag.Title = "verRegistro";
    @Styles.Render("~/Content/clientesStyle.css");
    @Styles.Render("~/Content/webPixel.css");
    @Styles.Render("~/Content/breadcrumb.css");
    @Styles.Render("~/Content/formularioDatos.css")
}

<style>

    .eliminar {
        color: red !important;
        border: 1px solid #ddd !important;
    }

    .eliminar:hover {
        color: white !important;
        background-color:red !important;

    }
    
</style>


<div class="container py-4 bg-white" id="historialClientes">

    <div class="template-demo">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-custom ">
                <li class="breadcrumb-item"><a href='@Url.Action("Index","Home")' data-abc="true" class="font-weight-bold text-uppercase">Home</a></li>
                <li class="breadcrumb-item"><a href='@Url.Action("Seguimiento","Home")' data-abc="true" class="font-weight-bold text-uppercase">Seguimiento</a></li>
                <li class="breadcrumb-item active font-weight-bold" aria-current="page"><span>&nbsp&nbspVer registro</span></li>
            </ol>
        </nav>


    </div>

    <div class=" flex-grow-1 overflow-visible">
        <!-- Header -->
        <header class="bg-surface-primary border-bottom pt-6">
            <div class="container-fluid">
                <div class="mb-npx">
                    <div class="row align-items-center">
                        <div class="col-sm-6 col-12 mb-4 mb-sm-0">
                            <!-- Title -->
                            <h1 class="h2 mb-4 ls-tight" id="titleCRM">Registro</h1>
                        </div> <!-- Actions -->
                        <div class="col-sm-6 col-12 text-sm-end mb-4">
                            <div class="mx-n1">
                                <a href='@Url.Action("editarDatosClientes","Home")' class="btn d-inline-flex btn-sm btn-primary mx-1" style="color:white" id="buttonNew">

                                    <div class="rowB">
                                        <svg class="pe-2" xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                                        </svg>

                                        Editar datos
                                    </div>
                                </a>
                            </div>
                        </div>

                    </div> <!-- Nav -->

                </div>
            </div>
        </header> <!-- Main -->
        <main class="py-6 bg-surface-secondary">
            <div class="container-fluid">
                <!-- Card stats -->
                @Html.Partial("_tarjetaCliente")
                <div class="card shadow border-0 mb-7">
                    <div class="wrapper bg-white">


                        @Html.Partial("_registroProspeccion")

                        <br />
                        <br />
                        @Html.Partial("_registroCotizacionVenta")
                        <div class="py-3 pb-4 border-bottom">
                            <a class="btn btn-primary mr-3" style="color:white; font-weight:700">Actualizar</a>

                            <a href="@Url.Action("Prospectos","Home")" class="btn border btn-secondary" style="font-weight:700">Cancelar</a>
                        </div>

                        <div class="d-sm-flex align-items-center " id="deactivate">
                            <div class="p-3">
                                <b>Eliminar registro</b>
                                <p>¡Advertencia! Se eliminará por completo el folio</p>
                            </div>
                            <div class="ml-auto"> <button class="btn danger eliminar" href="#deleteEmployeeModal" data-toggle="modal" style="font-weight:700">ELIMINAR</button> </div>
                        </div>

                    </div>

                </div>
            </div>
        </main>
    </div>

</div>

<div id="deleteEmployeeModal" class="modal fade fadeInLeft" data-animation-in="fadeInLeft">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Eliminar datos</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro que quieres eliminar los datos de este folio?</p>
                    <p class="text-warning"><small>Esta acción no podrá ser deshecha.</small></p>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-secondary" data-dismiss="modal" value="Cancelar">
                    <input type="submit" class="btn btn-danger" value="Eliminar">
                </div>
            </form>
        </div>
    </div>
</div>

















